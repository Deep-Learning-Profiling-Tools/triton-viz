{
    "compilerOptions": {
        "target": "ES2020",
        "module": "Node16",
        "moduleResolution": "Node16",
        "rootDir": "src",
        "outDir": "triton_viz/static",
        "lib": ["ES2020", "DOM"],
        "strict": false,
        "noImplicitAny": false,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*.ts", "src/**/*.d.ts"]
}
